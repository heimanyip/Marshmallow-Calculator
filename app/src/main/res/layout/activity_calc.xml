<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.heimanyip.calc.Calc"
    android:background="#c4f2fb">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:text="0"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:gravity="right|bottom"
            android:background="#ffffff"
            android:padding="10dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_gravity="center_horizontal"
            android:columnCount="5"
            android:rowCount="5">

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="AC"
                android:id="@+id/buttonAC"
                android:layout_row="0"
                android:layout_column="0"
                android:background="#fea1d9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="√"
                android:id="@+id/buttonSQRT"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#9b5afc"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="+/-"
                android:id="@+id/buttonPlusMinus"
                android:layout_row="0"
                android:layout_column="3"
                android:background="#fc9b5a"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="÷"
                android:id="@+id/buttonDivision"
                android:layout_row="0"
                android:layout_column="4"
                android:background="#5bfc9b"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="7"
                android:id="@+id/button7"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#ffe7e1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="8"
                android:id="@+id/button8"
                android:layout_row="1"
                android:layout_column="2"
                android:background="#eef9e4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="9"
                android:id="@+id/button9"
                android:layout_row="1"
                android:layout_column="3"
                android:background="#c6dcf4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="×"
                android:id="@+id/buttonMultiplication"
                android:layout_row="1"
                android:layout_column="4"
                android:background="#efd5fd"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="4"
                android:id="@+id/button4"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#d2ecc7"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="5"
                android:id="@+id/button5"
                android:layout_row="2"
                android:layout_column="2"
                android:background="#eca9d1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="6"
                android:id="@+id/button6"
                android:layout_row="2"
                android:layout_column="3"
                android:background="#ffe7e1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="-"
                android:id="@+id/buttonSubtraction"
                android:layout_row="2"
                android:layout_column="4"
                android:background="#f2e3a4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="1"
                android:id="@+id/button1"
                android:layout_row="3"
                android:layout_column="0"
                android:background="#C39797"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="2"
                android:id="@+id/button2"
                android:layout_row="3"
                android:layout_column="2"
                android:background="#dddddd"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="3"
                android:id="@+id/button3"
                android:layout_row="3"
                android:layout_column="3"
                android:background="#b2dfee"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="+"
                android:id="@+id/buttonAddition"
                android:layout_row="3"
                android:layout_column="4"
                android:background="#d2ecc7"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="0"
                android:id="@+id/button0"
                android:layout_row="4"
                android:layout_column="0"
                android:background="#fbcdf9"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="."
                android:id="@+id/buttonDecimal"
                android:layout_row="4"
                android:layout_column="3"
                android:background="#f2e3a4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="="
                android:id="@+id/buttonEquals"
                android:layout_row="4"
                android:layout_column="4"
                android:background="#bde0ff"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="20dp"/>
        </GridLayout>

    </LinearLayout>
</RelativeLayout>
